<UserControl x:Class="UpdateHelper.UI.Components.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="44" d:DesignWidth="740">
    <Grid Height="44" Width="740">
        <!-- Что качаешь -->
        <Label Content="Установка обновлений лаунчера" FontSize="16" Foreground="#FFFFFF" FontFamily="/UpdateHelper;component/UI/Fonts/#Gilroy" Padding="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="19"/>

        <!-- Сам прогрессбар -->
        <Border Background="#343434" Height="5" Width="740" CornerRadius="3" HorizontalAlignment="Left" Margin="0,39,0,0">
            <Border x:Name="ProgressBarLength" Background="White" Height="5" CornerRadius="3" Width="50" HorizontalAlignment="Left"/>
        </Border>
    </Grid>
</UserControl>
