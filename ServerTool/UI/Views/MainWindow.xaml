        xmlns:icons="clr-namespace:ServerTool.UI.Images.Icons"
        mc:Ignorable="d" Title="Server Tool" Height="517" Width="800" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" WindowStyle="None" Background="Transparent" 
        AllowsTransparency="True">
    <Border CornerRadius="25" Background="#1F1F1F" MouseDown="DragWindow" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="68"/>
                <RowDefinition Height="449"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <icons:ExitIcon Height="24" Width="24" Margin="746,22,30,22"/>
                <Label Content="Server Tool" VerticalAlignment="Center" Foreground="White" FontSize="16" FontFamily="/ServerTool;component/UI/Fonts/#Gilroy" Padding="0" Margin="30,0,690,0"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.Background>
                    <ImageBrush ImageSource="/UI/Images/Background.png"/>
                </Grid.Background>
            </Grid>
        </Grid>
    </Border>
</Window>
